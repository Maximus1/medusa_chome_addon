{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.0.0",
  "default_locale": "en",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "Medusa_icon.png"
  },
  "icons": {
    "16": "Medusa_icon.png",
    "48": "Medusa_icon.png",
    "128": "Medusa_icon.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.thetvdb.com/*",
    "*://*.imdb.com/*",
    "*://*.tvmaze.com/*",
    "*://*.themoviedb.org/*",
    "http://192.168.178.23:8999/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.thetvdb.com/*"],
      "js": ["content-utils.js", "content-tvdb.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.imdb.com/*"],
      "js": ["content-utils.js", "content-imdb.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.tvmaze.com/*"],
      "js": ["content-utils.js", "content-tvmaze.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.themoviedb.org/*"],
      "js": ["content-utils.js", "content-tmdb.js"],
      "run_at": "document_end"
    }
  ]
}
